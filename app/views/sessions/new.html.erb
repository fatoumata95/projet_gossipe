<div class="container">
	<h1>Login</h1>
	<p>Pour accéder à ta session, renseigne les informations suivantes:</p>

   <%= form_tag url_for(action: 'create'), method: "post" do %>

   <div class="form-group">
     <%= label_tag 'email' %>
     <%= text_field_tag 'email', 'email', class: 'form-control' %>
     <br /> <br />
   </div>

   <div class="form-group">
     <%= label_tag 'password' %>
     <%= text_field_tag 'password', 'password', class: 'form-control' %>
     <br /> <br />
   </div>

   <%= submit_tag "Login" %>

  <% end %>

  </div>
